<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- pill corners -->
    <corners android:radius="30dp"/>

    <!-- subtle inner gradient -->
    <gradient
        android:angle="90"
        android:startColor="?attr/accentGood"
        android:endColor="?attr/border"
        android:type="linear"/>

    <!-- light-blue border -->
    <stroke
        android:width="1dp"
        android:color="?attr/accentGood"/>

    <!-- optional padding so text never touches stroke -->
    <padding
        android:left="16dp"
        android:top="8dp"
        android:right="16dp"
        android:bottom="8dp"/>
</shape>
