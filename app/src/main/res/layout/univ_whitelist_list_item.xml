<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/univ_whitelist_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp">

    <ImageView
        android:id="@+id/univ_whitelist_apk_icon_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:layout_marginStart="10dp"
        android:maxWidth="40dp"
        android:maxHeight="40dp"
        tools:src="?attr/colorPrimary"
        android:contentDescription="" />

    <TextView
        android:id="@+id/univ_whitelist_apk_label_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toStartOf="@id/univ_whitelist_checkbox"
        android:layout_toEndOf="@id/univ_whitelist_apk_icon_iv"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:textColor="?attr/primaryTextColor"
        android:textSize="@dimen/large_font_text_view" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/univ_whitelist_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:buttonTint="?attr/accentGood"
        android:foregroundTint="?attr/accentGood" />

</RelativeLayout>
