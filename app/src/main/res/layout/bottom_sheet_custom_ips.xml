<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingTop="16dp"
    android:paddingEnd="8dp"
    android:paddingBottom="40dp">

    <TextView
        android:layout_width="60dp"
        android:layout_height="3dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="?attr/border" />

    <TextView
        android:id="@+id/custom_domain_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="ssdfsdf"
        android:textColor="?attr/primaryTextColor"
        android:textSize="@dimen/large_font_text_view" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/custom_domain_last_updated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="ssdfsdf"
        android:textColor="?attr/primaryLightColorText"
        android:textSize="@dimen/small_font_subheading_text" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:text="Firewall Rules"
        android:textColor="?attr/primaryTextColor"
        android:textSize="@dimen/extra_large_font_text_view" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/custom_ip_toggle_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:selectionRequired="true"
        app:singleSelection="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/custom_ip_tg_no_rule"
            style="@style/toggleButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="5dp"
            android:tag="0"
            android:text="@string/ci_no_rule"
            android:textColor="?attr/primaryTextColor"
            android:textSize="@dimen/mini_font_text_view" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/custom_ip_tg_block"
            style="@style/toggleButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="5dp"
            android:tag="1"
            android:text="@string/ci_block"
            android:textColor="?attr/primaryTextColor"
            android:textSize="@dimen/mini_font_text_view" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/custom_ip_tg_bypass_app"
            style="@style/toggleButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="5dp"
            android:tag="2"
            android:text="@string/ci_trust_rule"
            android:textColor="?attr/primaryTextColor"
            android:textSize="@dimen/mini_font_text_view" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/custom_ip_tg_bypass_univ"
            style="@style/toggleButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="5dp"
            android:tag="3"
            android:text="@string/ci_bypass_universal"
            android:textColor="?attr/primaryTextColor"
            android:textSize="@dimen/mini_font_text_view" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <RelativeLayout
        android:id="@+id/choose_country_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        android:background="@drawable/rectangle_border_background">

        <RelativeLayout
            android:id="@+id/choose_country_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/choose_country_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:padding="10dp"
                android:src="@drawable/ic_log_level" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/choose_country_arrow"
                android:layout_toEndOf="@id/choose_country_icon"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/choose_country_txt"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Country"
                    android:textColor="?attr/primaryTextColor"
                    android:textSize="@dimen/large_font_text_view" />

                <TextView
                    android:id="@+id/choose_country_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="Select a country"
                    android:textColor="?attr/primaryLightColorText"
                    android:textSize="@dimen/default_font_text_view" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/choose_country_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:padding="10dp"
                android:src="@drawable/ic_right_arrow_white" />

        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/choose_proxy_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rectangle_border_background">

        <RelativeLayout
            android:id="@+id/choose_proxy_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/choose_proxy_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:padding="10dp"
                android:src="@drawable/ic_log_level" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/choose_proxy_arrow"
                android:layout_toEndOf="@id/choose_proxy_icon"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/choose_proxy_txt"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proxy"
                    android:textColor="?attr/primaryTextColor"
                    android:textSize="@dimen/large_font_text_view" />

                <TextView
                    android:id="@+id/choose_proxy_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="Select a proxy"
                    android:textColor="?attr/primaryLightColorText"
                    android:textSize="@dimen/default_font_text_view" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/choose_proxy_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:padding="10dp"
                android:src="@drawable/ic_right_arrow_white" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>

