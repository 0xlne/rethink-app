<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background">

    <LinearLayout
        android:id="@+id/dc_title_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextAppearance.Heading.HomeScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
            android:text="@string/app_name_small_case" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dc_title"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/dc_subtitle"
                android:fontFamily="sans-serif-smallcaps"
                android:lineSpacingExtra="5dp"
                android:padding="10dp"
                android:textColor="?attr/primaryLightColorText"
                android:textSize="@dimen/extra_large_font_text_view" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dc_flag"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:ellipsize="none"
                android:gravity="center"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="26sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dc_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:textColor="?attr/primaryLightColorText"
                android:textSize="@dimen/default_font_text_view" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/dc_no_data_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dc_title_header"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/dc_no_rules_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:text="@string/blocklist_update_check_failure"
            android:textAlignment="center"
            android:textSize="@dimen/heading_font_text_view" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dc_no_rules_text"
            android:src="@drawable/illustrations_no_record" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dc_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dc_title_header"
        android:layout_alignParentBottom="true"
        android:nestedScrollingEnabled="false" />

</RelativeLayout>

