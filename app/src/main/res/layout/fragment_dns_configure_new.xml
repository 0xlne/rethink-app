<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="?attr/background"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dc_dns_heading"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:padding="15dp"
                        android:text="@string/dc_other_dns_heading"
                        android:textColor="?attr/accentGood"
                        android:textSize="@dimen/extra_large_font_text_view"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="45dp"
                        android:layout_marginEnd="15dp"
                        android:padding="5dp"
                        android:text="Choose between already available DNS resolvers or add your DNS resolver."
                        android:textSize="@dimen/default_font_text_view" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/connected_dns_details_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_marginStart="45dp"
                        android:padding="5dp"
                        android:layout_marginEnd="45dp"
                        android:textColor="?attr/secondaryTextColor"
                        android:text="Connected DNS: RethinkDNS. \nDNS over HTTPS"
                        android:textSize="@dimen/default_font_text_view" />

                    <RadioGroup
                        android:id="@+id/configure_dns_rg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checkedButton="@+id/default_dns"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">

                        <RadioButton
                            android:id="@+id/default_dns_rb"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:drawableEnd="@drawable/brave_mode_info"
                            android:enabled="true"
                            android:padding="10dp"
                            android:text="Default (RethinkDns)" />

                        <RadioButton
                            android:id="@+id/rethink_plus_dns_rb"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="10dp"
                            android:checked="false"
                            android:drawableEnd="@drawable/ic_right_arrow_white"
                            android:enabled="true"
                            android:padding="10dp"
                            android:text="RethinkDNS Plus" />

                        <RadioButton
                            android:id="@+id/custom_dns_rb"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:drawablePadding="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="10dp"
                            android:checked="false"
                            android:drawableEnd="@drawable/ic_right_arrow_white"
                            android:enabled="true"
                            android:padding="10dp"
                            android:text="Custom DNS (DOH/DNSCrypt/DNS Proxy)" />


                        <RadioButton
                            android:id="@+id/network_dns_rb"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="10dp"
                            android:checked="false"
                            android:drawableEnd="@drawable/brave_mode_info"
                            android:enabled="true"
                            android:padding="10dp"
                            android:text="Network-provided DNS" />

                    </RadioGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/background"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dc_blocklist_heading"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:padding="15dp"
                        android:text="@string/dc_block_heading"
                        android:textColor="?attr/accentGood"
                        android:textSize="@dimen/extra_large_font_text_view"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:id="@+id/dc_local_blocklist_rl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/dc_local_blocklist_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:alpha="0.5"
                            android:padding="10dp"
                            android:src="@drawable/ic_network" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/dc_local_blocklist_switch"
                            android:layout_toEndOf="@id/dc_local_blocklist_icon"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/dc_local_blocklist_heading"
                                    style="@style/TextAppearance.AppCompat.Subhead"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="5dp"
                                    android:drawablePadding="10dp"
                                    android:text="@string/dc_local_block_heading"
                                    android:textSize="@dimen/large_font_text_view"
                                    app:drawableEndCompat="@drawable/ic_keyboard_arrow_down_small" />

                                <TextView
                                    android:id="@+id/dc_local_blocklist_update"
                                    style="@style/TextAppearance.AppCompat.Subhead"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/badge_background"
                                    android:gravity="center"
                                    android:paddingStart="5dp"
                                    android:paddingTop="2dp"
                                    android:paddingEnd="5dp"
                                    android:paddingBottom="2dp"
                                    android:text="update available"
                                    android:textColor="?attr/chipTextColor"
                                    android:textSize="@dimen/small_font_subheading_text"
                                    android:visibility="visible" />
                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <TextView
                                android:id="@+id/dc_local_blocklist_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="5dp"
                                android:text="@string/dc_local_block_desc_1"
                                android:textSize="@dimen/default_font_text_view" />
                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/dc_local_blocklist_switch"
                            style="@style/CustomWidget.MaterialComponents.CompoundButton.Switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:padding="10dp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/dc_custom_domain_rl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/dc_custom_domain_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="5dp"
                            android:alpha="0.5"
                            android:padding="10dp"
                            android:src="@drawable/ic_network" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/dc_custom_domain_img"
                            android:layout_toEndOf="@id/dc_custom_domain_icon"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/dc_custom_domain_heading"
                                style="@style/TextAppearance.AppCompat.Subhead"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="10dp"
                                android:text="@string/dc_custom_block_heading"
                                android:textSize="@dimen/large_font_text_view" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="5dp"
                                android:text="@string/dc_custom_block_desc"
                                android:textSize="@dimen/default_font_text_view" />
                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/dc_custom_domain_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:paddingStart="25dp"
                            android:paddingEnd="25dp"
                            android:src="@drawable/ic_right_arrow_small" />

                    </RelativeLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/background"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dc_other_settings_heading"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:padding="15dp"
                        android:text="@string/dc_other_settings_heading"
                        android:textColor="?attr/accentGood"
                        android:textSize="@dimen/extra_large_font_text_view"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:id="@+id/dc_favicon_rl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/dc_favicon_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="5dp"
                            android:alpha="0.5"
                            android:padding="10dp"
                            android:src="@drawable/ic_network" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/dc_favicon_switch"
                            android:layout_toEndOf="@id/dc_favicon_img"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/dc_favicon_heading"
                                style="@style/TextAppearance.AppCompat.Subhead"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="10dp"
                                android:text="@string/dc_dns_website_heading"
                                android:textSize="@dimen/large_font_text_view" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="5dp"
                                android:text="@string/dc_dns_website_desc"
                                android:textSize="@dimen/default_font_text_view" />
                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/dc_favicon_switch"
                            style="@style/CustomWidget.MaterialComponents.CompoundButton.Switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:padding="10dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/dc_prevent_dns_leaks_rl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/dc_prevent_dns_leaks_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:alpha="0.5"
                            android:padding="10dp"
                            android:src="@drawable/ic_network" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/dc_prevent_dns_leaks_switch"
                            android:layout_toEndOf="@id/dc_prevent_dns_leaks_img"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/dc_prevent_dns_leaks_heading"
                                style="@style/TextAppearance.AppCompat.Subhead"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="10dp"
                                android:text="@string/dc_dns_leaks_heading"
                                android:textSize="@dimen/large_font_text_view" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="5dp"
                                android:text="@string/dc_dns_leaks_desc"
                                android:textSize="@dimen/default_font_text_view" />
                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/dc_prevent_dns_leaks_switch"
                            style="@style/CustomWidget.MaterialComponents.CompoundButton.Switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:padding="10dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/dc_check_update_rl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/dc_check_update_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:alpha="0.5"
                            android:padding="10dp"
                            android:src="@drawable/ic_network" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/dc_check_update_switch"
                            android:layout_toEndOf="@id/dc_check_update_img"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/dc_check_update_heading"
                                style="@style/TextAppearance.AppCompat.Subhead"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="10dp"
                                android:text="@string/dc_check_update_heading"
                                android:textSize="@dimen/large_font_text_view" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="5dp"
                                android:text="@string/dc_check_update_desc"
                                android:textSize="@dimen/default_font_text_view" />
                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/dc_check_update_switch"
                            style="@style/CustomWidget.MaterialComponents.CompoundButton.Switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:padding="10dp" />

                    </RelativeLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
