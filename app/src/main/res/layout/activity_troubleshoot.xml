                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="WARP"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="?attr/accentGood" />

