<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background"
    android:padding="20dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_icon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:contentDescription="App Icon"
        android:src="@drawable/ic_launcher_foreground" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:text="Your App"
        android:textSize="22sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_app_name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Active"
        android:textColor="#44C155"
        android:textSize="15sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_status"
        android:layout_marginVertical="12dp"
        android:background="?attr/divider" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:text="Premium Monthly"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_plan"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:text="â‚¹"
        android:textColor="#444"
        android:textSize="15sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_next_renewal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_price"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="Renews on: Sep 23, 2025"
        android:textColor="#888"
        android:textSize="14sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_features_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_next_renewal"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:text="Your plan includes:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_features"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_features_title"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text=""
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_border_background"
            android:paddingStart="30dp"
            android:paddingTop="10dp"
            android:paddingEnd="30dp"
            android:paddingBottom="10dp"
            android:text="Cancel subscription"
            android:textColor="?attr/secondaryTextColor" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_revoke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_border_background"
            android:paddingStart="30dp"
            android:paddingTop="10dp"
            android:paddingEnd="30dp"
            android:paddingBottom="10dp"
            android:text="Revoke subscription"
            android:textColor="?attr/secondaryTextColor" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_renew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_border_background"
            android:paddingStart="30dp"
            android:paddingTop="10dp"
            android:paddingEnd="30dp"
            android:paddingBottom="10dp"
            android:text="Renew subscription"
            android:textColor="?attr/secondaryTextColor" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_cancel_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Note: Cancelling will stop future charges, but you can continue using your subscription until the next renewal date."
            android:textColor="?attr/primaryLightColorText"
            android:textSize="12sp"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_manage_subscription_on_google_play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage your subscription through your Google Play account."
            android:textColor="?attr/primaryTextColor"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp" />
    </LinearLayout>

</RelativeLayout>
